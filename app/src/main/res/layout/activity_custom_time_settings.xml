<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loc_lay"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add Location"
            android:layout_gravity="left"
            android:padding="10dp" />

        <EditText
            android:id="@+id/loc_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Add location"
            android:layout_marginRight="40dp"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_lay"
        android:layout_below="@+id/loc_lay"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="From Date"
            android:layout_gravity="left|center_vertical"
            android:padding="2dp" />

        <TextView
            android:id="@+id/set_date"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="2dp" />

        <Button
            android:id="@+id/selectdate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:gravity="center"
            android:padding="2dp"
            android:text="Select Date" />

        <CheckBox
            android:id="@+id/start_c"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/todate_lay"
        android:layout_below="@+id/start_lay"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="To Date"
            android:layout_gravity="left|center_vertical"
            android:padding="2dp" />

        <TextView
            android:id="@+id/set_date_to"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="2dp" />

        <Button
            android:id="@+id/selectdate_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="Select Date" />

        <CheckBox
            android:id="@+id/end_c"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Forever"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_time"
        android:layout_below="@+id/todate_lay"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="From Time"
            android:layout_gravity="left|center_vertical"
            android:padding="2dp" />
        <TextView
            android:id="@+id/set_time"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="2dp" />

        <Button
            android:id="@+id/selecttime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="Select Time" />

        <CheckBox
            android:id="@+id/start_t_c"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="All Day"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/to_time"
        android:layout_below="@+id/start_time"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="To Time"
            android:layout_gravity="left|center_vertical"
            android:padding="2dp" />
        <TextView
            android:id="@+id/set_time_to"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="2dp" />

        <Button
            android:id="@+id/selecttime_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="95dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="Select Time" />

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accept"
        android:layout_below="@+id/to_time"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Deny"
            android:layout_gravity="left|center_vertical"
            android:padding="2dp" />


        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/toggle"
            android:text="ToggleButton" />

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Allow"
            android:layout_gravity="right|center_vertical"
            android:padding="2dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_lay"
        android:layout_below="@+id/accept"
        >
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"

        android:onClick="saveDateTime"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Save" />
    </LinearLayout>

</RelativeLayout>